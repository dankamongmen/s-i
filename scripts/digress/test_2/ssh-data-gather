#!/usr/bin/perl
# Gathers data about an installed systen over ssh.
use Expect;

my $timeout=600;

my $exp = Expect->spawn("ssh -t -t -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no $ENV{USER}\@$ENV{MACHINE}");
#$exp->debug(2);
#$exp->exp_internal(1);
$exp->expect($timeout, "Password:");
$exp->send("$ENV{USER_PASSWORD}\r");
$exp->expect($timeout, "Debian GNU/Linux comes with ABSOLUTELY NO WARRANTY");
sleep 2;
foreach my $log (qw{status hardware-summary syslog partman}) {
	$exp->send("cat /var/log/debian-installer/$log\r");
}
$exp->send("dmesg; dpkg -l; uname -a; mount; df -h; free; tasksel --list-tasks; locale\r");
# Strings output by locale indicate end of output.
$exp->expect($timeout, "LC_MEASUREMENT=");
$exp->expect($timeout, "LC_IDENTIFICATION=");
$exp->send("exit\r");
$exp->interact;
