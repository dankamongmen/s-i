#. "unusable free space".  No more than 8 symbols.
#: ../templates:184
msgid "unusable"
msgstr "gwael"

#. Type: text
#. Description
#. "primary partition".  No more than 8 symbols.
#: ../templates:189
msgid "primary"
msgstr "cynradd"

#. Type: text
#. Description
#. "logical partition".  No more than 8 symbols.
#: ../templates:194
msgid "logical"
msgstr "rhesym."

#. Type: text
#. Description
#. "primary or logical".  No more than 8 symbols.
#: ../templates:199
msgid "pri/log"
msgstr "cyn/rhe"

