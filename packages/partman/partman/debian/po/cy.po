#: ../templates:232
#, no-c-format
msgid "SCSI%s (%s,%s,%s) (%s)"
msgstr "SCSI%s (%s,%s,%s) (%s)"

#. Type: text
#. Description
#: ../templates:236
#, no-c-format
msgid "SCSI%s (%s,%s,%s), partition #%s (%s)"
msgstr "SCSI%s (%s,%s,%s), rhaniad #%s ($s)"

#. Type: text
#. Description
#: ../templates:240
#, no-c-format
msgid "RAID%s device #%s"
msgstr "Dyfais RAID%s #%s"

