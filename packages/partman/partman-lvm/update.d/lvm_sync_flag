#!/bin/sh

# This script removes the lvm flag for partitions whose method is not
# lvm and sets it for partition whose method is lvm

. /lib/partman/definitions.sh

dev=$1
num=$2
id=$3
size=$4
type=$5
fs=$6
path=$7

cd $dev

if [ $fs = free ]; then
    exit 0
fi

method=
if [ -f $id/method ]; then
    method=$(cat $id/method)
fi

has_lvm=no
flags=''
open_dialog GET_FLAGS $id
while { read_line flag; [ "$flag" ]; }; do
    if [ "$flag" != lvm ]; then
	if [ "$flags" ]; then
	    flags="$flags
$flag"
	else
	    flags="$flag"
	fi
    else
	has_lvm=yes
    fi
done
close_dialog

if [ "$method" = '' -a "$has_lvm" = yes ]; then
    echo lvm >$dev/$id/method
    if [ -f $dev/$id/use_filesystem ]; then
	rm $dev/$id/use_filesystem
    fi
    if [ -f $dev/$id/format ]; then
	rm $dev/$id/format
    fi
elif [ "$method" = lvm -a "$has_lvm" = no ]; then
    open_dialog SET_FLAGS $id
    write_line "$flags"
    write_line lvm
    write_line NO_MORE
    close_dialog
elif [ "$method" != lvm -a "$has_lvm" = yes ]; then
    open_dialog SET_FLAGS $id
    write_line "$flags"
    write_line NO_MORE
    close_dialog
fi

