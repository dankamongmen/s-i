if [ "$TERM" = linux ] ; then
	if [ "$TERM_TYPE" = virtual ]; then
		echo -ne "\033[9;0]" # Turn off console blanking.
	fi

	# Enable UTF-8 locale if it is available
	if [ -d /usr/lib/locale/C.UTF-8 ]; then
		TERM_UTF8=yes
		export LANG=C.UTF-8
		export LANGUAGE=en
		if [ "$TERM_TYPE" = virtual ]; then
			echo -ne "\033%G" # Enable UTF-8 console
		fi
	fi
fi
