#!/bin/sh
set -e

export DEBIAN_FRONTEND=none
. /usr/share/debconf/confmodule


file="$1"

OLDIFS="$IFS"
NEWLINE="
"
IFS="$NEWLINE"
for line in $(grep -v '^#' "$file"); do
	IFS="$OLDIFS"
	set -- $line
	#package="$1"
	var="$2"
	#type="$3"
	shift 3
	val="$@"
	if ! db_set "$var" "$val"; then
		# Question does not exist yet.
		db_register debian-installer/dummy "$var"
		db_set "$var" "$val"
		db_subst "$var" ID "$var"
	fi
	db_fset "$var" seen true
	IFS="$newline"
done
