#!/usr/bin/make -f
#
# debian/rules file for efi-reader
# Copyright (C) 2003 Alastair McKinstry, <mckinstry@debian.org>
# $Id$

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	-$(MAKE) clean
	dh_clean

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir
	$(MAKE)
	touch build-stamp

install: build
	dh_testdir
	dh_testroot
	dh_clean
	dh_installdirs
	$(MAKE) install DESTDIR=$(CURDIR)/debian/efi-reader
	dh_link /usr/bin/efi-reader /lib/debian-installer-startup.d/S40efi-reader

# Build architecture-independent files here.
binary-indep:

# Build arch-dependent files here
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdebconf
	dh_fixperms
	dh_gencontrol
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
